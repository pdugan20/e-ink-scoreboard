{
  "web_server_url": "http://localhost:5001/display",
  "screenshot_path": "/tmp/sports_display.png",
  "display_width": 800,
  "display_height": 480,
  "screenshot_scale": 1,
  "refresh_interval": 360,
  "apply_dithering": false,
  "dither_saturation": 0.8,
  "max_retries": 3,
  "retry_delay": 5,
  "logging": {
    "level": "INFO",
    "log_file": "~/logs/eink_display.log",
    "max_log_size_mb": 0.5,
    "backup_count": 3,
    "log_memory_usage": false,
    "log_browser_processes": false
  },
  "_comment": "Configuration for eink display controller"
}
